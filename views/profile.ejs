<h2>Envie uma mensagem para <%= username %></h2><head>
  <!-- Bootstrap CSS via CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<% if (sent) { %><p>Mensagem enviada!</p><% } %>
<form method="POST" action="/u/<%= username %>/send">
  <textarea name="content" placeholder="Sua mensagem" required></textarea><br>
  <button>Enviar</button>
</form>
